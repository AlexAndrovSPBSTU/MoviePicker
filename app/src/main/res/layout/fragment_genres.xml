<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".HomeFragment"
             android:background="@color/black">
    <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
        <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/cartoon"
                app:backgroundTint="@null"
                android:text="Мультфильмы"
                android:theme="@style/GenreButtonTheme"
                android:layout_marginBottom="20dp"
        >
        </Button>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/thriller"
                app:backgroundTint="@null"
                android:text="Триллеры"
                android:theme="@style/GenreButtonTheme"
                android:layout_marginBottom="20dp"
        >
        </Button>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/comedy"
                app:backgroundTint="@null"
                android:text="Комедии"
                android:theme="@style/GenreButtonTheme"
                android:layout_marginBottom="20dp"
        >
        </Button>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/horror"
                app:backgroundTint="@null"
                android:text="Ужасы"
                android:theme="@style/GenreButtonTheme"
                android:layout_marginBottom="20dp"
        >
        </Button>
    </LinearLayout>
</FrameLayout>