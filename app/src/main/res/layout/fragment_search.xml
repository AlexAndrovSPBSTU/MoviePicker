<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchFragment"
        android:background="@color/black"
>
    <ImageView
            android:src="@drawable/ic_rectangle_back_yellow"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/backgroundRect1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="-0dp" android:contentDescription="TODO"/>
    <ImageView
            android:src="@drawable/ic_rectangle_middle_black"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/backgroundRect2"
            android:layout_marginBottom="-0dp" android:contentDescription="TODO"/>
    <ImageView
            android:src="@drawable/ic_rectangle_front_grey"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/backgroundRect3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="-0dp" android:contentDescription="TODO"/>
    <TextView
            android:text="@string/find_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textViewFindMovie" app:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:textSize="24sp"
    />
    <ImageView
            android:src="@drawable/ic_shape_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/shapeRight"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha=".55"
            android:contentDescription="TODO"
    />

    <ImageView
            android:src="@drawable/ic_shape_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/shapeLeft"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha=".55"
            android:contentDescription="TODO"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/search_field"
            android:layout_height="50dp"
            android:alpha="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp">
        <ImageView
                android:src="@drawable/ic_search"
                android:layout_width="1dp"
                android:layout_height="24dp" android:id="@+id/imageView" android:layout_weight="1"
                android:contentDescription="TODO"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/search_for"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:background="@null"
                android:ems="10"
                android:id="@+id/editTextSearch" android:layout_weight="1" android:importantForAutofill="no"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
