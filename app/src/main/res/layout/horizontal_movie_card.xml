<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".ui.HorizontalMovieCard">
    <androidx.cardview.widget.CardView
            android:id="@+id/movieCard"
            android:layout_width="360dp"
            android:layout_height="match_parent" app:cardBackgroundColor="@color/movie_card_color"
            app:cardCornerRadius="8dp" android:layout_gravity="center" android:layout_margin="10dp">
        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">
            <ImageView
                    android:orientation="horizontal"
                    android:layout_width="96dp"
                    android:layout_height="144dp"
                    android:src="@drawable/star_wars"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/poster" android:id="@+id/moviePoster">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
                android:text="Отель «Гранд Будапешт»"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cardTitle"
                android:textStyle="bold" android:textColor="@color/white"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"/>
        <TextView
                android:text="2015"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cardYear"
                android:textStyle="bold" android:textColor="@color/white"
                android:layout_marginStart="120dp"
                android:layout_marginTop="70dp"/>
        <ImageView
                android:src="@drawable/ic_rating_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView2"
                android:layout_marginStart="120dp"
                android:layout_marginTop="55dp"
        />
        <TextView
                android:text="8.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/movieRating"
                android:textColor="@color/mild_yellow"
                android:textSize="14sp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="52dp"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>